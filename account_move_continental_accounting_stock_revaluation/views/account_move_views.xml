<odoo>
    <record id="view_move_form" model="ir.ui.view">
        <field name="model">account.move</field>
        <field name="name">account.move.form</field>
        <field name="inherit_id" ref="account.view_move_form" />
        <field name="priority" eval="40" />
        <field name="arch" type="xml">
            <button name="button_draft" position="after">
                <field name="allow_move_with_valuation_cancelation" invisible="1" />
                <button
                    name="button_draft"
                    string="Reset to Draft"
                    attrs="{'invisible':['|',('allow_move_with_valuation_cancelation','=',False),('state','=','draft')]}"
                    type="object"
                    groups="account.group_account_invoice"
                    data-hotkey="r"
                    confirm="This journal entry is related to an inventory valuation record, built-in behaviour will not allow further modifications for this journal entry. A manual stock revaluation will be perfomed in order to be able to modify this record."
                />
            </button>
        </field>
    </record>
</odoo>
